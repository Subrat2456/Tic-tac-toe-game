            color: #3498db;
        }

        .game-info {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.3rem;
            font-weight: bold;
            color: #667eea;
            min-height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .game-info.winner {
            animation: pulse 0.5s ease-in-out;
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
        }

        .board {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin-bottom: 30px;
            aspect-ratio: 1;
        }

        .cell {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border: none;
            border-radius: 10px;
